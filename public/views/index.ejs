<!doctype html>
<html lang="en">
<head>
    <%- include('header.ejs') -%>
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js" integrity="sha384-/KNQL8Nu5gCHLqwqfQjA689Hhoqgi2S84SNUxC3roTe4EhJ9AfLkp8QiQcU8AMzI" crossorigin="anonymous"></script>
    <title>Чат</title>
    <style>
        body {
            height: 90vh;
            padding: 0;
        }
        .bg {
            background-color: #DDD7F7;
        }
        #logout {
            text-decoration: none;
            color: #d06464;
            transition: 0.1s linear;
            border-radius: 10px;
            padding: 2px 10px;
        }
        #logout:hover {
            background-color: #d4cafd;
        }
        .user {
            padding: 5px 10px;
            border-radius: 10px;
            background-color: #c0cfea;
            margin-bottom: 10px;
        }
        .message {
            padding: 5px 10px;
            border-radius: 10px;
            background-color: #c0cfea;
            box-shadow: 4px 5px 8px 0px rgba(0, 0, 0, 0.74);
        }
        #message {
            height: 45px;
            width: 87%;
            border: 1px solid grey;
            padding: 5px 10px;
        }
        #message:focus {
            outline: none;
            box-shadow: -8px -10px 8px 3px rgba(238, 121, 238, 0.2);
        }
        #send {
            height: 45px;
            width: 13%;
            border: 1px solid black;
            transition: 0.1s linear;
            background-color: #b7c8e8;
        }
        #send:hover {
            background-color: #a7bee8;
        }
        .from-me {
            display:flex;justify-content: end
        }
        .username {
            font-size: 10px;
            font-weight: bold;
        }
        #chat {
            overflow: auto;
        }
        .text {
            top: -4px;
            position: relative;
        }
        .dot {
            height: 8px;
            width: 8px;
            border-radius: 50%;
            display: inline-block;
        }
        .dot.online {
            background-color: green;
        }
        .dot.offline {
            background-color: grey;
        }
    </style>
</head>
<body>
    <div class="rounded p-3" style="margin: 50px 100px; background-color: #F6EDFA; height: 95%">
        <div class="py-1 px-2 rounded mb-2 bg d-flex justify-content-between">
            <h5 class="m-0"><%= name %></h5>
            <a href="/logout" id="logout">Выйти</a>
        </div>
        <div class="d-flex" style="height: 93%;">
            <div class="w-25 rounded p-2 bg">
                <h4>Пользователи</h4>
                <div style="overflow: auto">
                    <% users.forEach((user) => { %>
                        <div class="user" data-user="<%= user.name %>">
                            <% if (user.name === name) { %>
                                <h6>Я</h6>
                            <% } else { %>
                                <h6>
                                    <%= user.name %>
                                    <span class="dot <%= user.online ? 'online' : 'offline' %>"></span>
                                </h6>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            </div>
            <div class="bg rounded p-2 w-75 d-flex justify-content-between" style="margin-left: 20px; flex-direction: column;">
                <div id="chat">
                    <% if (messages) { %>
                        <% messages.forEach((message) => { %>
                            <div class="mb-2 <% if (message.from === name) { %>from-me<% } %>">
                                <div class="message" style="position: relative;max-width: 50%; width: max-content; min-width: 20%;">
                                    <span class="username"><%= message.from %></span><br>
                                    <span class="text"><%= message.text %></span>
                                    <span style="font-size: 10px;position: absolute;right: 8px;bottom: 2px;color: #575757;">
                        <%= message.time %>
                    </span>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
                <div class="d-flex">
                    <input type="text" id="message" class="rounded" name="message" placeholder="Введите сообщение...">
                    <button class="rounded" id="send">Отправить</button>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    $(()=> {
        let socket = io.connect('http://localhost:8080');

        let message = $('#message');
        let messageSend = $('#send');
        let chat = $('#chat');
        let from = '<%= name %>';

        socket.emit('login', {name: from})

        chat.scrollTop(chat.height());

        messageSend.on('click', () => {
            socket.emit('newMessage', {from: from, message: message.val()});
            message.val('');
        });

        socket.on('addMessage', (data) => {
            chat.append(
                '<div class="mb-2 ' + (data.from === from ? 'from-me' : '') + '">' +
                    '<div class="message" style="position: relative;max-width: 50%; width: max-content; min-width: 20%;">' +
                        '<span class="username">' + data.from + '</span><br>' +
                        '<span class="text">' + data.text + '</span>' +
                        '<span style="font-size: 10px;position: absolute;right: 8px;bottom: 2px;color: #575757;">' +
                            data.time +
                        '</span>' +
                    '</div>' +
                '</div>'
            );
        });
    });
</script>
</html>